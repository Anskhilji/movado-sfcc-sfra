<isif condition="${slotcontent && !!slotcontent.content.length}">
    <div class="container">
    <isloop items="${slotcontent.content}" var="product" status="loopStatus">
         <isinclude url="${URLUtils.url('Tile-Show', 'pid', product.ID, 'pview', 'tile', 'ratings', false, 'swatches', false, 'isHighResolutionImage', false)}"/>
        <isbreak/>
    </isloop>
    </div>
</isif>