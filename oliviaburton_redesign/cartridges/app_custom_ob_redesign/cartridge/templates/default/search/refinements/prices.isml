<ul class="values content">
    <isloop items="${refinement.values}" var="refinementValue">
        <li title="${refinementValue.title}" class="col-sm-auto col-md-12">
            <label>
                <a href="${refinementValue.url}" class="<isif condition="${refinementValue.selected}">selected</isif>">
                    <span>
                        ${refinementValue.displayValue}
                    </span>
                </a>
            </label>
        </li>
    </isloop>
</ul>
