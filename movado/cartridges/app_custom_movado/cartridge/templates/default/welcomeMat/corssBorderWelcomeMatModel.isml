<isinclude template="/components/modules" sf-toolkit="off" />
<div class="modal show welcomeMat" id="welcomeMat" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-middle">
        <div class="modal-content">
            <div class="modal-body movado-welcome-mat text-center">
                <div class="eswModalWrapper">
                    <div class="eswModal" role="dialog" id="eswModal">
                        <div class="eswModal-content">
                            <iscontentasset aid="welcome-mat-header" />
                            <isif condition="${pdict.movadoLandingObject.isGeoLocation}"> 
                                <iscontentasset aid="welcome-mat-body" />
                                <h3><iscontentasset aid="welcome-mat-message-1" /> <span>${pdict.movadoLandingObject.selectedCountryName}</span></h3>
                                <button class="btn btn-primary esw-btn" data-dismiss="modal" data-url="${pdict.movadoLandingObject.setLocale}"><iscontentasset aid="welcome-mat-button-site-name" /></button>
                            <iselse>
                                <h3><iscontentasset aid="welcome-mat-message-2" /> <span>${request.geolocation.countryName}</span> <iscontentasset aid="welcome-mat-right-now" /></h3>
                                <button class="btn btn-primary esw-btn" data-dismiss="modal" data-url="${pdict.movadoLandingObject.setLocale}">${Resource.msg('esw.continue.anyway.button', 'esw', null)}</button>
                            </isif>
                            <div class="selectors selector-container">
                                <p><iscontentasset aid="welcome-mat-change-country" /></p>
                                <div class="esw-country-selector selectCountry">
                                    <label>${Resource.msg('esw.shipping.country','esw',null)}</label>
                                    <div class="select-field">
                                        <div class="current-country">
                                            <i class="fa fa-angle-right fa-fw selector-icon"></i>
                                            <i class="flag-icon flag-icon-${pdict.movadoLandingObject.selectedCountry.toLowerCase()}"></i>
                                            <span id="selected-country" data-value="${pdict.movadoLandingObject.selectedCountry}">${pdict.movadoLandingObject.selectedCountryName}</span>
                                        </div>
                                        <div class="selector">
                                            <div class="country">
                                                <isloop iterator="${pdict.movadoLandingObject.allCountries}" var="object" status="loopStatus">
                                                    <a href="${'#'}" data-url="${pdict.movadoLandingObject.setLocale}" 
                                                    class="landing-link dropdown-item selected-link" data-country="${object.value}"
                                                    data-locale="${request.getLocale()}" data-currency="${pdict.movadoLandingObject.selectedCurrency}">
                                                    <i class="flag-icon flag-icon-${object.value.toLowerCase()}"></i>${object.displayValue}</a>
                                                </isloop>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>