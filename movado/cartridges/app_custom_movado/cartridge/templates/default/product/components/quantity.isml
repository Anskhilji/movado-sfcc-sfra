<label class="d-none" for="quantity-dropdown">${Resource.msg('label.quantity', 'common', null)}</label>
<select class="quantity-select custom-select form-control d-none" id="quantity-dropdown">
    <isloop items="${product.quantities}" var="quantity">
        <option value="${quantity.value}"
                <isif condition="${product.productType !== 'bundle'}">data-url="${quantity.url}"</isif>
                ${quantity.selected ? 'selected' : ''}
        >
            ${quantity.value}
        </option>
    </isloop>
</select>
