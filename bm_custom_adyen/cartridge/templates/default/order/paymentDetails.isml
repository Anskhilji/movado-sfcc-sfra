<table class="order-details" width="200" border="0" cellpadding="0" cellspacing="0" align="left" valign="top" style="border-collapse:collapse;font-family:'Century Gothic', Arial, sans-serif;">
    <tr>
        <td class="h1 uppercase pad-40-top" style="font-size:20px;text-transform:uppercase;padding-top:40px;color:#000001;vertical-align:top;">${emailObject.paymentLabel}</td>
    </tr>
    <tr>
        <td class="pad-10-top pad-20-btm" style="padding-top:10px;padding-bottom:20px;color:#000001;vertical-align:top;">
            <div class="divider-black" style="background-color:#000000;background-image:none;background-repeat:repeat;background-position:top left;background-attachment:scroll;height:1px;line-height:1px;"></div>
        </td>
    </tr>
    <isloop items="${emailObject.order.billing.payment.selectedPaymentInstruments}" var="payment">
        <isif condition="${payment.paymentMethod === 'Affirm'}">
            <tr>
                <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${emailObject.paymentAffirm}</td>
            </tr>
            <iselseif condition="${payment.paymentMethod === 'Adyen' || payment.paymentMethod === 'PayPal'}" />
            <tr>
                <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${emailObject.paymentPaypal}</td>
            </tr>
            <iselseif condition="${payment.paymentMethod === 'DW_APPLE_PAY'}" />
            <tr>
                <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${emailObject.applePay}</td>
            </tr>
            <iselse/>
            <tr>
                <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${payment.owner}</td>
            </tr>
            <tr>
                <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${payment.type}</td>
            </tr>
            <isif condition="${payment.maskedCreditCardNumber}">
                <tr>
                    <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${payment.maskedCreditCardNumber}</td>
                </tr>
            </isif>
            <tr>
                <td class="p" style="line-height:18px;font-size:12px;color:#000001;vertical-align:top;">${emailObject.expLabel}${payment.expirationMonth}/${payment.expirationYear}</td>
            </tr>
        </isif>
    </isloop>
</table>
