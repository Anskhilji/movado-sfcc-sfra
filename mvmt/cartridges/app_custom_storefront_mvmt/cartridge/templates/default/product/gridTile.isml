<iscomment> Custom: Condition added to show recommendation tile</iscomment>
<isset name="showQuickView" value="${true}" scope="page" />
<isset name="product" value="${pdict.product}" scope="page" />
<div class="product" data-pid="${product.id}">
    <isif condition="${pdict.display.recommendattionTile === true}">
        <isinclude template="product/recommendationTile" />
    <iselse>
        <isinclude template="product/productTile" />
    </isif>
</div>
