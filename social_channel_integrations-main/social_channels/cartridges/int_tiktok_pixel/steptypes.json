{
  "step-types": {
      "script-module-step": [
        {
          "@type-id": "custom.TikTok.BatchGroupEvent",
          "@supports-parallel-execution": "false",
          "@supports-site-context": "true",
          "@supports-organization-context": "false",
          "description": "This job is used to send event groups to TikTok.",
          "module": "int_tiktok_pixel/cartridge/scripts/jobs/TikTokEvent",
          "transactional": "true",
          "function": "batchTikTokGroups",
          "parameters": {
            "parameters": [
                {
                  "@name": "runs",
                  "description": "Number of runs",
                  "@type": "long",
                  "@required": "true",
                  "default-value": 50,
                  "enum-values":
                  {
                    "value":
                    [
                      25,
                      50,
                      100,
                      200
                    ]
                  }  
              }
            ]
          },
          "status-codes": {
            "status": [
                {
                    "@code": "ERROR",
                    "description": "Used when an error occurred."
                },
                {
                    "@code": "OK",
                    "description": "Used when everything went well."
                }
            ]
          }
        },
        {
          "@type-id": "custom.TikTok.GroupEvent",
          "@supports-parallel-execution": "false",
          "@supports-site-context": "true",
          "@supports-organization-context": "false",
          "description": "This job is used to group the web event custom objects to be sent to TikTok.",
          "module": "int_tiktok_pixel/cartridge/scripts/jobs/TikTokEvent",
          "transactional": "true",
          "function": "groupTikTokEvents",
          "parameters": {
            "parameters": [
                {
                    "@name": "groupSize",
                    "description": "Group Size",
                    "@type": "long",
                    "@required": "true",
                    "default-value": 50,
                    "enum-values":
                    {
                      "value":
                      [
                        10,
                        20,
                        30,
                        40,
                        50,
                        100,
                        200
                      ]
                    }                    
                }
            ]
          },
          "status-codes": {
            "status": [
                {
                    "@code": "ERROR",
                    "description": "Used when an error occurred."
                },
                {
                    "@code": "OK",
                    "description": "Used when everything went well."
                }
            ]
          }
        },
        {
          "@type-id": "custom.TikTok.AdvanceMatching",
          "timeout-in-seconds": "30",
          "description": "This job is used to check advance matching settings on TikTok.",
          "module": "int_tiktok_pixel/cartridge/scripts/jobs/advanceMatching.js",
          "transactional": "false",
          "function": "checkAM",
          "status-codes": {
            "status": [
                {
                    "@code": "ERROR",
                    "description": "Used when an error occurred."
                },
                {
                    "@code": "OK",
                    "description": "Used when everything went well."
                }
            ]
          }
        }          
      ]
  }
}