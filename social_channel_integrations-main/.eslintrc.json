{
    "root": true,
    "extends": "airbnb-base/legacy",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": [
        "social_feeds/cartridges/bc_library/cartridge/scripts/object.js",
        "social_feeds/cartridges/bc_library/cartridge/scripts/modules/fileHammer/fileHammer.js",
        "social_feeds/cartridges/bc_library/cartridge/scripts/modules/martini/Martini.js",
        "social_feeds/cartridges/bc_library/cartridge/scripts/util/Class.js",
        "social_oms_integration/**",
        "test/**"
    ],
    "globals": {
        "empty": true,
        "request": true,
        "response": true,
        "session": true
    },
    "rules": {
        "func-names": "off",
        "function-paren-newline": "off",
        "global-require": "off",
        "import/no-unresolved": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": 1
            }
        ],
        "max-len": "off",
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-plusplus": "off",
        "object-curly-newline": "off",
        "no-shadow": [
            "error",
            {
                "allow": [
                    "err",
                    "callback"
                ]
            }
        ],
        "require-jsdoc": "error",
        "valid-jsdoc": [
            "error",
            {
                "preferType": {
                    "Boolean": "boolean",
                    "Number": "number",
                    "object": "Object",
                    "String": "string"
                },
                "requireReturn": false
            }
        ],
        "vars-on-top": "off"
    },
    "overrides": [
        {
            "files": [
                "playwright.config.ts",
                "**/cartridges/**/static/*/js/**/*.js"
            ],
            "parserOptions": {
                "sourceType": "module"
            },
            "rules": {
                "guard-for-in": 0,
                "no-console": 0,
                "no-restricted-syntax": 0,
                "no-use-before-define": 0,
                "require-jsdoc": 0,
                "valid-jsdoc": 0
            }
        },
        {
            "files": [
                "**/cartridges/**/client/*/js/**/*.js"
            ],
            "parserOptions": {
                "ecmaVersion": 2018
            },
            "env": {
                "browser": true,
                "jquery": true
            },
            "rules": {
                "global-require": "off",
                "no-var": "off",
                "prefer-const": "off"
            }
        },
        {
            "files": [
                "features/*.js",
                "features/**/*.js",
                "migrations/*.js",
                "migrations/**/*.js",
                "scripts/*.js",
                "scripts/**/*.js"
            ],
            "parserOptions": {
                "ecmaVersion": 2020
            },
            "globals": {
                "Map": true,
                "Promise": true
            },
            "env": {
                "node": true
            },
            "rules": {
                "no-await-in-loop": 0,
                "no-bitwise": 0,
                "no-console": 0,
                "no-continue": 0,
                "no-restricted-syntax": 0,
                "no-underscore-dangle": 0,
                "no-use-before-define": 0,
                "require-jsdoc": 0,
                "valid-jsdoc": 0
            }
        }
    ]
}
