            <isif condition="${dw.system.Site.getCurrent().getCustomPreferenceValue('enableABTest')}">
            
                <isif condition="${dw.campaign.ABTestMgr.isParticipant('MovadoRedesignABTest','render-new-header')}">
                    <isinclude template="/components/header/pageHeader" />
                <iselse>
                    <isinclude template="/components/header/old/pageHeader" />
                </isif>
                
            <iselse>
                <isinclude template="/components/header/pageHeader" />
            </isif>
            
            <div id="mainContent">
