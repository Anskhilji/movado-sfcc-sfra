<isif condition="${pdict.relativeURL}">
    <link rel="alternate" hreflang="x-default" href="https://www.movado.com${pdict.relativeURL.toString().replace(/\/us\/([^\/]*)\//, '/us/en/')}"/>
    <link rel="alternate" hreflang="en-us" href="https://www.movado.com${pdict.relativeURL.toString().replace(/\/us\/([^\/]*)\//, '/us/en/')}"/>
    <link rel="alternate" hreflang="fr-us" href="https://www.movado.com${pdict.relativeURL.toString().replace(/\/us\/([^\/]*)\//, '/us/fr/')}"/>
    <link rel="alternate" hreflang="fr-ca" href="https://www.movado.com${pdict.relativeURL.toString().replace(/\/us\/([^\/]*)\//, '/us/fr/')}"/>

</isif>