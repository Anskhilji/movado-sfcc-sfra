<iscomment>Updated the bootstrap columns classes</iscomment>
<isif condition="${product.pdpDetailedAttributes && product.pdpDetailedAttributes.length}">
	<div class="value technical-detail">
		<isloop items="${product.pdpDetailedAttributes}" var="attr">
			<div class="attribute-list">
				<span class="attribute-name">${attr.displayName}</span>
				<span class="attribute-value">${attr.value}</span>
			</div>
		</isloop>
	</div>
</isif>