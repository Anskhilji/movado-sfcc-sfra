<div class="primary-images col-12 col-sm-7">
  <div class="product-badges">
    <isinclude template="product/components/newnessBadge"/>
  </div>
  <isscript>
    var primaryImageCarouselConfig = {
      "slidesToShow": 1,
      "slidesToScroll": 1,
      "dots": false,
      "centerMode": true,
      asNavFor: '.carousel-nav'
    }
    <!-- primaryImageCarouselConfig = primaryImageCarouselConfig.replace(/[\n\s]/gi, ''); -->
  </isscript>
  <div class="cs-carousel-wrapper">
    <div class="js-carousel main-carousel cs-carousel" data-carousel-config='${JSON.stringify(primaryImageCarouselConfig)}'>
      <isloop items="${product.images['pdp533']}" var="image" status="loopStatus">
        <div class="carousel-tile">
          <picture>
            <source media="(min-width: 992px)" srcset="${product.images.pdp533[loopStatus.count-1].url}" />
            <source media="(max-width: 991px)" srcset="${product.images.pdp533[loopStatus.count-1].url}" />
            <img src="${image.url}" alt="${image.alt}" itemprop="image" data-zoom-mobile-url="${product.images.zoom830[loopStatus.count-1].url}" data-zoom-desktop-url="${product.images.zoom1660[loopStatus.count-1].url}" />
            <isset name="isImageExist" value="true" scope="page" />
          </picture>
        </div>
      </isloop>
    </div>
    
    <div class="carousel-nav" data-carousel-config='${JSON.stringify(primaryImageCarouselConfig)}'>
      <isloop items="${product.images['pdp533']}" var="image" status="loopStatus">
        <div class="carousel-tile">
          <picture>
            <source media="(min-width: 992px)" srcset="${product.images.pdp533[loopStatus.count-1].url}" />
            <source media="(max-width: 991px)" srcset="${product.images.pdp533[loopStatus.count-1].url}" />
            <img src="${image.url}" alt="${image.alt}" itemprop="image" data-zoom-mobile-url="${product.images.zoom830[loopStatus.count-1].url}" data-zoom-desktop-url="${product.images.zoom1660[loopStatus.count-1].url}" />
            <isset name="isImageExist" value="true" scope="page" />
          </picture>
        </div>
      </isloop>
    </div>
  </div>
  <isif condition="${isImageExist}">
      <isif condition="${!isQuickView}">
	      <button class="quickview js-zoom-image btn p-0" data-toggle="modal" data-target="#zoomProduct" aria-label="${product.resources.Zoom}">
		      <span class="fa-stack fa-lg">
		          <i class="fa fa-circle fa-inverse fa-stack-2x"></i>
		          <i class="fa fa-expand fa-stack-1x"></i>
		      </span>
	      </button>
      </isif>
  </isif>
</div>

<iscomment> Zoom Modal </iscomment>
<div class="modal fade" id="zoomProduct" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="pinchZoom zoomedImage"><img alt="${product.resources.Zoom}" src="${product.images['pdp533'][0].url}"/></div>
      </div>
    </div>
  </div>
</div>
